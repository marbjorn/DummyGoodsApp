<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="RoundedSquare">
        <item name="cornerSize">4dp</item>
    </style>

    <style name="CustomCardView">
        <item name="cardElevation">8dp</item>
        <item name="backgroundColor">@color/white</item>
        <item name="cardCornerRadius">20dp</item>
        <item name="contentPadding">16dp</item>
        <item name="android:layout_marginTop">12dp</item>
    </style>

    <style name="RetryButton">
        <item name="drawableTint">@color/white</item>
        <item name="android:drawableEnd">@drawable/ic_baseline_autorenew_24</item>
        <item name="fontFamily">sans-serif-light</item>
        <item name="android:text">@string/retry</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="backgroundTint">@color/navy_blue</item>
        <item name="cornerRadius">10dp</item>
    </style>
</resources>